{
    "name": "xm/starter_symfony",
    "license": "MIT",
    "type": "project",
    "description": "Starter for creating Symfony sites at XM Media",
    "autoload": {
        "psr-4": { "": "src/" },
        "classmap": [ "app/AppKernel.php", "app/AppCache.php" ]
    },
    "autoload-dev": {
        "psr-4": { "Tests\\": "tests/" }
    },
    "require": {
        "php": ">=5.6.0",
        "symfony/symfony": "3.2.*",
        "doctrine/orm": "^2.5",
        "doctrine/doctrine-bundle": "^1.6",
        "doctrine/doctrine-migrations-bundle": "^1.2",
        "symfony/swiftmailer-bundle": "^2.4",
        "symfony/monolog-bundle": "^3.0",
        "sensio/distribution-bundle": "^5.0",
        "sensio/framework-extra-bundle": "^3.0.2",
        "incenteev/composer-parameter-handler": "^2.1",
        "friendsofsymfony/user-bundle": "^2.0.0-beta1",
        "twig/extensions": "^1.3",
        "roave/security-advisories": "dev-master",
        "xm/asset-version-bundle": "dev-master",
        "xm/filter-bundle": "dev-master",
        "xm/security-bundle": "dev-master",
        "xm/user-admin-bundle": "dev-master",
        "xm/mail-manager-bundle": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "5.7.*",
        "sensio/generator-bundle": "^3.0",
        "symfony/var-dumper": "^3.0",
        "symfony/phpunit-bridge": "^3.0",
        "mockery/mockery": "^0.9",
        "liip/functional-test-bundle": "^1.6",
        "doctrine/doctrine-fixtures-bundle": "2.3.*",
        "xm/mailer-test-bundle": "dev-master"
    },
    "scripts": {
        "symfony-scripts": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::prepareDeploymentTarget"
        ],
        "post-install-cmd": [
            "@symfony-scripts"
        ],
        "post-update-cmd": [
            "@symfony-scripts"
        ]
    },
    "config": {
        "bin-dir": "bin",
        "platform": {
            "php": "5.6"
        }
    },
    "extra": {
        "symfony-app-dir": "app",
        "symfony-bin-dir": "bin",
        "symfony-var-dir": "var",
        "symfony-web-dir": "html",
        "symfony-tests-dir": "tests",
        "symfony-assets-install": "relative",
        "incenteev-parameters": {
            "file": "app/config/parameters.yml"
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url":  "git@github.com:xmmedia/XMFilterBundle.git"
        },
        {
            "type": "vcs",
            "url":  "git@github.com:xmmedia/XMSecurityBundle.git"
        },
        {
            "type": "vcs",
            "url":  "git@github.com:xmmedia/XMUserAdminBundle.git"
        },
        {
            "type": "vcs",
            "url":  "git@github.com:xmmedia/XMAssetVersionBundle.git"
        },
        {
            "type": "vcs",
            "url":  "git@github.com:xmmedia/XMMailManagerBundle.git"
        },
        {
            "type": "vcs",
            "url":  "git@github.com:xmmedia/XMMailerTestBundle.git"
        }
    ]
}
